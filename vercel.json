{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // --- Specific getX alias handling across folders ---
    {
      "src": "/api/(?:[^/]+/)?getSystemPrompt",
      "dest": "/api/system-prompt.js"
    },
    {
      "src": "/api/(?:[^/]+/)?getLivingMemory",
      "dest": "/api/living-memory.js"
    },
    {
      "src": "/api/(?:[^/]+/)?getOriginStory",
      "dest": "/api/origin-story.js"
    },
    {
      "src": "/api/(?:[^/]+/)?getUniquenessFunction",
      "dest": "/api/uniqueness-function.js"
    },
    {
      "src": "/api/(?:[^/]+/)?updateMemory",
      "dest": "/api/update-memory.js"
    },

    // --- Direct OpenAPI-style endpoint access (no /api prefix) ---
    {
      "src": "/system-prompt",
      "dest": "/api/system-prompt.js"
    },
    {
      "src": "/origin-story",
      "dest": "/api/origin-story.js"
    },
    {
      "src": "/living-memory",
      "dest": "/api/living-memory.js"
    },
    {
      "src": "/uniqueness-function",
      "dest": "/api/uniqueness-function.js"
    },
    {
      "src": "/update-memory",
      "dest": "/api/update-memory.js"
    },

    // --- Other important static rewrites ---
    {
      "src": "/.well-known/ai-plugin.json",
      "dest": "/api/ai-plugin.js"
    },
    {
      "src": "/openapi.yaml",
      "dest": "/api/openapi.js"
    },

    // --- Wildcard fallback to support any /api/[folder]/handler.js ---
    {
      "src": "/api/[^/]+/(.*)",
      "dest": "/api/$1.js"
    },

    // --- Final catch-all fallback for /api/*.js directly ---
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    }
  ],
  "headers": [
    {
      "source": "/openapi.yaml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/yaml"
        }
      ]
    }
  ]
}
